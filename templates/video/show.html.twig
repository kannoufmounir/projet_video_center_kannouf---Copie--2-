{% extends 'base.html.twig' %}

{% block title %}Video
{% endblock %}

{% block body %}

	<div class="card text-light text-center bg-dark pr-5 pl-5 ml-5  mt-5 mr-5 p-5 rounded-0">
		<h1 class="card-title ">
			{{ video.title }}


		</h1>
		<div class="d-flex justify-content-center mt-4">

			{% if app.user %}
				{% if app.user.isVerified %}
					<a class="btn btn-outline-secondary rounded-0 p-4" href="{{ path('app_video_edit', {'id': video.id}) }}">Modifier</a>
					{{ include('video/_delete_form.html.twig') }}


					<a class="btn btn-outline-secondary rounded-0 p-4" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
						Détails
					</a>
					<a class="btn btn-outline-secondary rounded-0 p-4" href="{{ path('app_home') }}">Retour à l'accueil</a>
				{% endif %}
			{% endif %}
		</div>
		<div class="collapse" id="collapseExample">
			<div class="card card-body text-light bg-dark border-0">

				<br>
				<tr>
					<th>ID</th>
					<td>{{ video.id }}</td>
				</tr>
				<br>
				<tr>
					<th>Publication</th>
					<td>{{ video.updatedAt|date('Y-m-d H:i:s') }}</td>
				</tr><hr>
				<p class="h4 text-light bg-dark">{{ video.descripation }}</p>
			</div>
		</div>

	</div>

	<div class="pr-5 pl-5 bg-light pr-5 pl-5 ml-5 mr-5 rounded-0 p-5 ">
		<div class=" justify-content-center">


			<div class="card card-horizontal bg-light text-dark border-0 rounded-0">
				<div class="card-body">


					<div class="embed-responsive embed-responsive-16by9">
						<iframe class="embed-responsive-item" width="100%" height="20%" src="{{ video.videoLink }}"></iframe>
					</div>
					<br>


						<strong></strong>


					</div>
				</div>
			</div>
		</div>
	</div>

</div></div>{% endblock %}
