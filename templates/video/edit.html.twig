{% extends 'base.html.twig' %}

{% block title %}Edit Video
{% endblock %}

{% block body %}
	<div class=" p-5 text-center bg-dark ">
		<div class="bg-dark text-light rounded w-100">
			<h1>
				<tbody class="text-light bg-dark">
					<tr>
						
						<td>
							<a class="card-text border-0 text-light" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
								<p class="card-text">{{ video.descripation | slice(0, 50) }}
									{% if video.descripation|length > 50 %}...
									{% endif %}
								</p>
							</a>

						</td>
					</tr>

					|
					<tr>
						<td>{{ video.updatedAt|date('Y-m-d H:i:s') }}</td>
					</tr>

				</tbody>
			</h1>
			<div class="collapse" id="collapseExample">
				<div class="card card-body text-light bg-dark border-0">
					<br>
					<tr>
						<th>ID</th>
						<td>{{ video.id }}</td>
					</tr>
					<br>
					<tr>
						<th>Publication</th>
						<td>{{ video.updatedAt|date('Y-m-d H:i:s') }}</td>
					</tr><hr>
					<p class="h4 text-light bg-dark">{{ video.descripation }}</p>

					<div class="card card-horizontal bg-dark text-dark border-0 rounded-0">
						<div class="card-body">


							<div class="embed-responsive embed-responsive-16by9">
								<iframe class="embed-responsive-item" width="100%" height="20%" src="{{ video.videoLink }}"></iframe>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	{{ include('video/_form.html.twig', {'button_label': 'Update'}) }}


</form></div>{% endblock %}
