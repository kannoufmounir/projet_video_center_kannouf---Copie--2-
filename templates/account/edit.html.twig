{% extends 'base.html.twig' %}

{% block title %}Update Profile
{% endblock %}

{% block body %}
	<div class="row mt-5 rounded-0 p-5 w-100">
		<div class="col-md-6 p-5 mx-auto rounded-0 ">
			<div class="card mb-5  p-5rounded-0 ">
				<div class="card-body shadow-lg p-5 rounded-0 ">
					<h1 class="card-title text-center mb-5  rounded-0 ">Update Profile</h1>
					{{ form_start(userForm) }}
					<div class="mb-3">
						<label class="form-label">First Name</label>
						{{ form_widget(userForm.firstname, {'attr': {'class': 'form-control p-3'}}) }}
					</div>
					<div class="mb-3">
						<label class="form-label">Last Name</label>
						{{ form_widget(userForm.lastname, {'attr': {'class': 'form-control p-3'}}) }}
					</div>
					<div class="mb-3">
						<label class="form-label">Email</label>
						{{ form_widget(userForm.email, {'attr': {'class': 'form-control p-3'}}) }}
					</div>
					<button type="submit" class="btn btn-dark rounded-0 p-3" formnovalidate>Apply Changes
					</button>

					<div class="mb-3">
					
						{{ form_widget(userForm.imageFile, {'attr': {'class': 'form-control p-3 mt-5 ' }}) }}
					</div>

					{{ form_end(userForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
